@model IEnumerable<SportStore.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/Images/Layout/Slide/Running.jpg" alt="Running">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Images/Layout/Slide/Handball_shose.jpg" alt="Basketball">
            <div class="carousel-caption d-none d-md-block">
                <h3>NEW COLLECTION</h3>
                <h3>RUNNING SHOES</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Images/Layout/Slide/Basketball.jpg" alt="Basketball">
            <div class="carousel-caption d-none d-md-block">
                <h3>THE BIGGEST COLLECTION</h3>
                <h3>BASKETBALLS</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Images/Layout/Slide/Volleyball.jpg" alt="Volleyball">
            <div class="carousel-caption d-none d-md-block">
                <h3>EVERYTHING YOU NEED </h3>
                <h3>ON THE VOLLEYBALL</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Images/Layout/Slide/Tennis.jpg" alt="Tennis">
            <div class="carousel-caption d-none d-md-block">
                <h3>THE BIGGEST COLLECTION</h3>
                <h3>TENNIS</h3>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<script>
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 3000
            });
        });
</script>
<section class="container feature mt-3">
    <div class="text-center">
        <h3>Feature Product</h3>
    </div>
</section>

<div>
    <img src="~/Content/Images/Layout/Slide/Running.jpg" alt="" width="160" height="58"/>
</div>

<style>

    .carousel-item img{
        height: 545.96px;
    }
    .feature div h3 {
        color: #303030;
        display: inline-block;
        background: url(/Content/Images/Layout/best-seller.png) no-repeat left center;
        text-transform: uppercase;
        font-size: 32px;
        padding: 5px 10px 10px 40px;
        line-height: 32px;
        text-align: center;
    }
</style>